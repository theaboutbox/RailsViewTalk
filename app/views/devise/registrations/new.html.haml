%h1 Sign up
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %fieldset
    %legend Profile Information
    = f.input :first_name
    = f.input :last_name
    = f.input :email
    = f.input :password
    = f.input :password_confirmation

  %fieldset
    %legend Home Address
    = render :partial => 'form_address', 
      locals: {field_name: :home_address, form: f}

  %fieldset
    %legend Work Address
    = render :partial => 'form_address', 
      locals: {field_name: :work_address, form: f}
  
  %fieldset
    %legend Non Profit
    = f.association :non_profit, collection: NonProfit.all,
      label: "Select a non profit", as: :radio_buttons

  %fieldset
    %legend Event
    = f.association :event, collection: Event.all,
      label: "Select an event", as: :radio_buttons

  = f.submit 'Sign up'
= render "devise/shared/links"
